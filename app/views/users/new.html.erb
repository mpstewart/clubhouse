<% if @user.errors.any? %>
  <div class="alert alert-error">Please fix the following <%= pluralize(@user.errors.count, 'error') %>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user, url: signup_path do |f| %>
  <div class="form_field">
  <%= f.label :username %><br>
  <%= f.text_field :username %>
  </div>

  <div class="form_field">
  <%= f.label :password %><br>
  <%= f.password_field :password%>
  </div>

  <div class="form_field">
  <%= f.label :confirm %><br>
  <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit "Join" %>
<% end %>